<%= render "layouts/errors", :object => @post %>

<%= form_for @post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :image %>
  <%= f.text_field :url %>
  <br><br>
  <%= f.label :story %>
  <%= f.text_area :story, :placeholder => "Let's hear it." %>
  (this box changes sizes)
  <br>
  <%= f.submit %>
<% end %>
