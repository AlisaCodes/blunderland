<h1> <%= @post.title %> </h1>
<h3> <%= @post.story %> </h3>

<% if @post.tags.any? %>
  <h4>Tags:</h4>

<%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to "Delete", post_path(@post),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %>
| <%= link_to 'Got Inspired?', new_post_path(@post) %>
